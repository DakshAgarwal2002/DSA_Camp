#include<iostream>
using namespace std;
int evenodd(int *arr,int n)
{
	int e=0,o=0;
	for(int i=0;i<n;i++)
	{
		if(*(arr+i)%2==0)
		{
			e++;
		}
		else
		o++;
	}
	cout<<e<<"  "<<o;
	return 0;
	
}
int main()
{
//	int a=20;
//	int *b=&a;
//	int **c=&b;
//	cout<<a<<"  "<<*b<<"  "<<**c<<endl;
//	*b +=1;
//	cout<<*b<<"  "<<a<<"  "<<**c<<endl;
//	a=*(&a)++;
//	a=*&a++;
//	cout<<*b<<"  "<<a<<"  "<<**c<<endl;
int arr[]={2,6,4,5,6,7,8,9,10};
evenodd(arr,9);
}
